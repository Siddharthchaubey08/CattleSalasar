<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CattelSalasarMAUI.ViewModels"
             x:Class="CattelSalasarMAUI.CustomComponents.AnimalDetailsComponent">
    <ScrollView>
        <StackLayout>
            <!--<StackLayout Margin="0,10,0,10" IsVisible="{Binding AnimalDetailsSection}">-->
            <StackLayout Margin="0,10,0,10" IsVisible="False">
                <Frame BackgroundColor="WhiteSmoke" IsVisible="{Binding AnimalDetailsSection}" IsClippedToBounds="True" HasShadow="True" Margin="10,0,10,0">
                    <Grid x:Name="BasicInformation" IsVisible="{Binding AnimalDetailsSection}"
                         RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto,auto" ColumnDefinitions="*"
                         RowSpacing="5">

                <Label Grid.Row="0" Text="Animal Details" FontAttributes="Bold" Margin="0, 8, 0, 0"  TextColor="Black" FontSize="20"></Label>
                <!--LeadNumber-->
                <Grid  Grid.Row="1" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="LeadNumber" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                                    <Entry Grid.Column="1" ReturnType="Next" FontSize="16" Text="{Binding LeadNumber}" x:Name="LeadNumber" 
                                TextColor="IndianRed" IsReadOnly="True" Placeholder="Enter Breed Name" HeightRequest="80" FontAttributes="Bold" Keyboard="Text"></Entry>

                        </Grid>
                    </Border>
                </Grid>
                
                <!--ViewAnimalNumber-->
                <Grid  Grid.Row="2" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="View Animal Number" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" ReturnType="Next" FontSize="16" Text="{Binding CurrentAnimalNumber}" x:Name="CurrentAnimalNumber" 
                                TextColor="IndianRed" Placeholder="Enter Breed Name" HeightRequest="80" FontAttributes="Bold" Keyboard="Text"></Entry>

                        </Grid>
                    </Border>
                </Grid>

                <!--Type of Animal-->
                <Grid  Grid.Row="3" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="Black" FontAttributes="Bold" Text="Type Of Animals" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedAnimalType}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="TypeOfAnimals" Title="Select Animal Type" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Goat</x:String>
                                        <x:String>Sheep</x:String>
                                        <x:String>Horse</x:String>
                                        <x:String>Mare</x:String>
                                        <x:String>Pony</x:String>
                                        <x:String>Pig</x:String>
                                        <x:String>Yak</x:String>
                                        <x:String>Mule</x:String>
                                        <x:String>Cattle</x:String>
                                        <x:String>Buffalo</x:String>
                                        <x:String>Camel</x:String>
                                        <x:String>Donkey</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>

                    </Border>

                </Grid>

                <!--Category Type-->
                <Grid  Grid.Row="4" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Category Type" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedCategoryType}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="CategoryType" Title="Select Category Type" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Crossbreed</x:String>
                                        <x:String>Exotic</x:String>
                                        <x:String>Indigenous</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>

                    </Border>
                </Grid>

                <!--Switch Of Tail-->
                <Grid  Grid.Row="5" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Switch Of Tail" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedSwitchOfTail}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="SwitchOfTail" Title="Select Switch Of Tail" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>No Switch</x:String>
                                        <x:String>Black</x:String>
                                        <x:String>White</x:String>
                                        <x:String>Brown</x:String>
                                        <x:String>Bi-colored</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>
                
                <!--Sex-->
                <Grid  Grid.Row="6" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Sex" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedSex}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="SelectedSex" Title="Select Sex" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Male</x:String>
                                        <x:String>Female</x:String>
                                        
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>
                
                <!--BodyColour-->
                <Grid  Grid.Row="7" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Body Colour" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" ReturnType="Next" FontSize="15" Text="{Binding BodyColour}" x:Name="BodyColour" 
                                   TextColor="Black" Placeholder="Enter BodyColour" HeightRequest="80" FontAttributes="Bold" Keyboard="Text"></Entry>

                        </Grid>
                    </Border>
                </Grid>
                
                <!--BreedName-->
                <Grid  Grid.Row="8" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Breed Name" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" ReturnType="Next" FontSize="15" Text="{Binding BreedName}" x:Name="BreedName" 
                                 TextColor="Black" Placeholder="Enter Breed Name" HeightRequest="80" FontAttributes="Bold" Keyboard="Text"></Entry>

                        </Grid>
                    </Border>
                </Grid>

                <!--ApproxAgeOfAnimal-->
                <Grid  Grid.Row="9" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Approx Age Of Animal" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" ReturnType="Next" FontSize="15" Text="{Binding ApproxAgeOfAnimal}" MaxLength="2" x:Name="ApproxAgeOfAnimal" 
                           TextColor="Black" Placeholder=" Approx Age Of Animal" HeightRequest="80" FontAttributes="Bold" Keyboard="Numeric" />

                        </Grid>
                    </Border>
                </Grid>

                <!--MilkingStatus-->
                <Grid  Grid.Row="10" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Milking Status" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />
                            <Picker Grid.Column="1" SelectedItem="{Binding MilkingStatus}" FontSize="15" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="MilkingStatus" Title=" Select Milking Status" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Milking</x:String>
                                        <x:String>Dry</x:String>
                                        <x:String>Na</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>

                <!--Milking Status(Litter Per Day)-->
                <Grid  Grid.Row="11" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Milking Status(Litter Per Day)" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" Text="{Binding MilkYield}" FontAttributes="Bold" Placeholder="Milking status- (Litter per day)" HeightRequest="80" ReturnType="Next" FontSize="15" MaxLength="2" x:Name="CustomerAge" TextColor="IndianRed" Keyboard="Numeric" />
                            
                        </Grid>
                    </Border>
                </Grid>

                <!--PregnancyStatus-->
                <Grid  Grid.Row="12" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Pregnancy Status" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedPregnancyStatus}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="PregnancyStatu" Title="Select Pregnancy Status" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Yes</x:String>
                                        <x:String>No</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>

                <!--Vaccination Done(Yes/No)-->
                <Grid  Grid.Row="13" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Vaccination Done(Yes/No)" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedVaccination}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="PregnancyStatus" Title="Select Vaccination" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Yes</x:String>
                                        <x:String>No</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>
                
                <!--OtherIdentificationMark-->
                <Grid  Grid.Row="14" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Other Identification Mark" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" Text="{Binding OtherIdentificationMark}" FontAttributes="Bold" Placeholder="Other Identification Mark" HeightRequest="80" ReturnType="Next" FontSize="15" x:Name="OtherIdentificationMark" TextColor="IndianRed" Keyboard="Text" />
                        
                        </Grid>
                    </Border>
                </Grid>

                <!--DrContactName-->
                <Grid  Grid.Row="15" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Doctor Name" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" Text="{Binding DrContactName}" ReturnType="Next" FontSize="15" HeightRequest="80" FontAttributes="Bold" x:Name="DrContactName" TextColor="Black" Placeholder="Enter DrContact Name"></Entry>
                        </Grid>
                    </Border>
                </Grid>

                <!--Doctor Contact Number-->
                <Grid  Grid.Row="16" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Doctor Contact Number" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" Text="{Binding DrContactNo}" ReturnType="Next" FontSize="15" HeightRequest="80" x:Name="DrContactNo" MaxLength="10" FontAttributes="Bold" TextColor="IndianRed" Placeholder="Doctor Contact Number" Keyboard="Numeric"></Entry>

                        </Grid>
                    </Border>
                </Grid>

                <!--RegistrationNo-->
                <Grid  Grid.Row="17" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Registration Number" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Entry Grid.Column="1" Text="{Binding RegistrationNumber}" ReturnType="Next" FontSize="15" HeightRequest="80" x:Name="RegistrationNumber" MaxLength="10" FontAttributes="Bold" TextColor="IndianRed" Placeholder="Registration Number" Keyboard="Numeric"></Entry>

                        </Grid>
                    </Border>
                </Grid>

                <!--HealthCertificateIssueDate-->
                <Grid  Grid.Row="18" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Veterinary Health Certificate Issue Date" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <DatePicker Grid.Column="1" Date="{Binding HealthCertificateIssueDate}" 
                                 FontAttributes="Bold" FontSize="15" TextColor="IndianRed"
                                HeightRequest="80" x:Name="HealthCertificateIssueDate" >
                                <!--SelectedIndexChanged="State_SelectedIndexChanged">-->

                            </DatePicker>
                        </Grid>
                    </Border>
                </Grid>

                <!--Type Of Tag-->
                <Grid  Grid.Row="19" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span FontSize="15" TextColor="black" FontAttributes="Bold" Text="Type Of Tag" />
                                <Span Text="*" FontAttributes="Bold"  FontSize="15" TextColor="Red" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border Grid.Row="1" Stroke="Black" FlowDirection="MatchParent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,0,8,0" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="0.15*,0.90*">
                            <Image Grid.Column="0" Source="survey.png" VerticalOptions="Center" Aspect="AspectFit" HeightRequest="30" WidthRequest="35" />

                            <Picker Grid.Column="1" FontSize="15" SelectedItem="{Binding SelectedTypeOfTagging}" HeightRequest="80" TextColor="IndianRed" FontAttributes="Bold" x:Name="TypeOfTagging" Title="Select Type Of Tagging" >
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Metallic</x:String>
                                        <x:String>PVC</x:String>
                                        <x:String>RFI</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Grid>
                    </Border>
                </Grid>

                <!--Ownership Details-->
                <Grid  Grid.Row="20" RowDefinitions="20,40">
                    <Label Grid.Row="0" Margin="10,0,0,0">
                        <Label.FormattedText>
                            <FormattedString>
