                                   <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" 
                                           x:Name="lblFileName" FontSize="16" TextColor="IndianRed" Margin="10,5,10,2" FontAttributes="Bold" Text="{Binding SelectedPDFFileName}" />
                                    <Button Grid.Row="1"  Grid.Column="0" BackgroundColor="CornflowerBlue" HeightRequest="40" FontAttributes="Bold" Text="Upload Files" TextColor="White" 
